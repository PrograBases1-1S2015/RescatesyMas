--Búsqueda de mascota global--
create or replace procedure Buscar_Mascota(nombre_mascota varchar2,distrito_busqueda varchar2,raza_mascota varchar2,color_mascota varchar2,estado varchar2,tamanio_mascota varchar2,
tipo_mascota varchar2, nivel_energia_mascota varchar2,entrenamiento_mascota varchar2,Result out sys_refcursor) is
begin  
  --Abrir cursor para guardar toda la información--
open Result for
Select vg.nombre,vg.fecha,vg.descripcion,vg.nota_adicional,vg.direccion_exacta,vg.distrito,vg.estado_mascota,vg.raza,vg.tipo_mascota,vg.tamanio,vg.nombre_Persona,vg.num_telefono_1
from VISTA_GENERAL_MASCOTAS vg
where UPPER(vg.nombre) = UPPER(nombre_mascota) or UPPER(vg.distrito) = UPPER(distrito_busqueda) 
or UPPER(vg.raza) = UPPER(raza_mascota);
end Buscar_Mascota;
    
